<h1 class='question-title'><%= @question.title %></h1>

<div class='question-content'>
  <p class='question-body'><%= @question.body %></p>
</div>
<form action = "/questions/<%= @question.id %>/vote" method = "POST" class= "inline">
  <button class = "upvote-button" type="submit" name="Upvote!"></button>
</form>
 <span> <%= @question.votes.count %> votes || </span>
 <span> author: <%= @question.user.username %> ||</span>
 <span> <%= @question.comments.count %> comments || </span>
 <a class="delete" href='/questions/<%= @question.id %>'>delete this question</a>

<h3><%= @question.comments.count %> Comments</h3>
<ul>
  <% @question.comments.each do |comment| %>
    <li><%= comment.body %><br><%= comment.user.username%></li>
  <% end %>
</ul>
<a href='/questions/<%= @question.id %>/comments/new'>add a comment</a>

<h2><%= @question.answers.count %> Answers</h2>
<% @question.answers.each do |answer| %>
  <div class='answer'
    <p><%= answer.body %></p>
    <p class='answer-user'><%= answer.user.username %>   -   <%= answer.updated_at%></p>

    <h3><%= answer.comments.count %> Comments</h3>
    <ul>
      <% answer.comments.each do |comment| %>
        <li><%= comment.body %><br><%= comment.user.username%></li>
      <% end %>
    </ul>
  </div>
  <a href='/answers/<%= answer.id %>/comments/new'>add a comment</a>
<% end %>

<h3><a href='/questions/<%= @question.id.to_s %>/answers/new'>Post Your Answer</a></h3>
