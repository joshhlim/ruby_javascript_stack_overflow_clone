<div class='container'>
   <form action="/questions/<%= @question.id %>" method="POST">
   <input type="hidden" name="_method" value="PUT"/>
     <label for="categories"> New Language: </label>
     <select id='category_dropdown' name='category'>
        <% @categories.each do |category| %>
          <option name='category' value=<%= category.id %>><%= category.name %></option>
        <% end %>
     </select>
     <label for="title"> New Question: </label>
     <input type="text" name="[question]title" id='title'>
     <label for="body"> New Body: </label>
     <textarea cols='60' rows='10' name="[question]body" id='body'></textarea>
     <input type="submit" value="Submit Question">
  </form>
</div>
