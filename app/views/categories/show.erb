<h1 class="category-name"><%= @category.name %></h1>
<p class=question-header> Questions about (<%= @category.name %>): </p>
<div class="jumbotron">
  <ul class= "catlist">
    <% @category.questions.each do |q| %>
     <li class= "cat">
      <article id = "<%= q.id %>">
      <h3><a href="/questions/<%= q.id %>"> <%= q.title %></a></h3>
      <span class="count"> <%= q.votes_count %> votes || </span>
      <span> author: <%= q.user.username %> ||</span>
      <span> <%= q.answers.count %> answers ||</span>
      <span> <%= q.comments.count %> comments </span>

       <% if q.user.id == session[:id] %>
           <form action = "/category/<%= @category.id %>/question/<%= q.id %>" method = "POST" class= "inline delete">
             <input type="hidden" name="_method" value="DELETE" />
             <button type="submit" class="btn btn-danger btn-xs delete-button"><span class="glyphicon glyphicon-remove"></span> Delete this question</button>
          </form>
      <% end %>
     </article>
    </li>
    <% end %>
  </ul>
</div>
